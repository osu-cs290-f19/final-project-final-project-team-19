<script src="createGroup.js" charset="utf-8"></script>
<div style='margin: 2em; border: 1px solid black; padding: 1em; display: flex; flex-direction: column;'>
    <div style="width: 50%;">
        <div class='formRow'>
            <h2>Group Name</h2>
            <input type="text" style='margin-left: 3em; width: 100%;' id='name' />
        </div>

        <div class="formRow">
            <h2>Group Tag</h2>
            <div id="tagRadioContainer">
                <div class="tagRadio">
                    <input type="radio" id="tagStudies" name="Tag" value="Studies" /><label for="tagStudies">Studies</label>
                </div>
                <div class="tagRadio">
                    <input type="radio" id="tagGames" name="Tag" value="Games" /><label for="tagGames">Games</label>
                </div>
                <div class="tagRadio">
                    <input type="radio" id="tagSports" name="Tag" value="Sports" /><label for="tagSports">Sports</label>
                </div>
                <div class="tagRadio">
                    <input type="radio" id="tagOther" name="Tag" value="Other" /><label for="tagOther">Other:  </label> <input id="otherTagText" type="text" style="width: 100%;" />
                </div>
            </div>
        </div>

        <div class='formRow'>
            <h2>Description</h2>
            <textarea rows='10' cols="30" style='margin-left: 3em; width: 100%;' id='description'></textarea>
        </div>
        <div class='formRow'>
            <h2>Submit</h2>
            <input style='margin-left: 2em;' id='createGroup' type="button" value="Create" />
        </div>
    </div>
</div>